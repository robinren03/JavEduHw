<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fram_con"
    tools:context=".BlankFragment1">

    <android.widget.SearchView
        android:id="@+id/searc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:queryHint="请输入搜索内容" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="3dp"
                    android:id="@+id/card1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/imageview1"
                            android:layout_width="165dp"
                            android:layout_height="360dp"
                            android:scaleType="centerCrop"
                            android:layout_margin="8dp"
                            android:src="@drawable/qa" />
                        <!--   tools 测试属性，只会在PreView中看到，运行时没有这些东西         -->
                        <TextView
                            android:id="@+id/textview1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:textColor="#000000"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="在线问答" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="3dp"
                    android:id="@+id/card2"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="8dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/imageview2"
                            android:layout_width="135dp"
                            android:layout_height="145dp"
                            android:scaleType="centerCrop"
                            android:layout_margin="8dp"
                            android:src="@drawable/shitilianjie" />
                        <!--   tools 测试属性，只会在PreView中看到，运行时没有这些东西         -->
                        <TextView
                            android:id="@+id/textview2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:textColor="#000000"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="实体链接" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="3dp"
                    android:id="@+id/card3"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:layout_alignBottom="@id/card1"
                    android:layout_alignParentRight="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--   tools 测试属性，只会在PreView中看到，运行时没有这些东西         -->
                        <ImageView
                            android:id="@+id/imageview3"
                            android:layout_width="135dp"
                            android:layout_height="145dp"
                            android:layout_margin="8dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/subject" />

                        <TextView
                            android:id="@+id/textview3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:textColor="#000000"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="科目详解" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:text="每日推荐"
                />
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Mylinear1"
                    android:background="@color/purple_500"
                    android:orientation="horizontal"
                    android:padding="0dp"
                    >
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="语文"
                        android:layout_margin="0dp"
                        android:id="@+id/Chinese2"
                        style="?android:attr/borderlessButtonStyle"
                        />

                    <Button
                        android:id="@+id/math2"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="数学" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="英语"
                        android:id="@+id/English2"
                        style="?android:attr/borderlessButtonStyle"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物理"
                        android:id="@+id/physics2"
                        style="?android:attr/borderlessButtonStyle"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="化学"
                        android:id="@+id/Chemistry2"
                        style="?android:attr/borderlessButtonStyle"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="生物"
                        android:id="@+id/biology2"
                        style="?android:attr/borderlessButtonStyle"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="政治"
                        android:id="@+id/politics2"
                        style="?android:attr/borderlessButtonStyle"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="历史"

                        android:id="@+id/history2"
                        style="?android:attr/borderlessButtonStyle"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地理"
                        android:id="@+id/geography2"
                        style="?android:attr/borderlessButtonStyle"/>

                </LinearLayout>
            </HorizontalScrollView>
            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refreshLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </LinearLayout>>

    </androidx.core.widget.NestedScrollView>



</FrameLayout>
